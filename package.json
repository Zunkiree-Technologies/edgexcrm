{
  "name": "edge-x-crm",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.14.2",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@edge-x-crm/web",
    "dev:server": "turbo run dev --filter=@edge-x-crm/server",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@edge-x-crm/web",
    "build:server": "turbo run build --filter=@edge-x-crm/server",
    "lint": "turbo run lint",
    "lint:web": "turbo run lint --filter=@edge-x-crm/web",
    "lint:server": "turbo run lint --filter=@edge-x-crm/server",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rimraf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,md,json}\""
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "turbo": "^2.3.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
