# =====================================================
# EdgexCRM Backend Environment Variables
# =====================================================
# Copy this file to .env and fill in the values
# =====================================================

# Server Configuration
PORT=4001
NODE_ENV=development

# Database (Neon PostgreSQL)
# Get connection string from Neon console
# Use pooler endpoint for better performance
DATABASE_URL=postgresql://user:password@ep-xxx-pooler.region.aws.neon.tech/edgexcrm?sslmode=require

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS (Frontend URLs)
CORS_ORIGIN=http://localhost:4000

# =====================================================
# External Services (Configure when needed)
# =====================================================

# AWS S3 (Documents) @MVP
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=edgexcrm-documents
AWS_S3_REGION=ap-south-1

# Email (SMTP) @MVP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@edgexcrm.com

# SMS Gateway (Nepal) @MVP
SMS_GATEWAY_URL=
SMS_API_KEY=

# WhatsApp Cloud API @MVP
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_BUSINESS_ACCOUNT_ID=
